{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "plugin": [
    "@mohak34/opencode-notifier@latest",
    "@tarquinen/opencode-dcp@latest",
    "@zenobius/opencode-skillful",
    "@openspoon/subtask2@latest",
    "@franlol/opencode-md-table-formatter@0.0.3",
    "opencode-websearch-cited@1.2.0", // IMPORTANT: Put opencode-websearch-cited LAST in the plugin list to avoid impacting other plugins' auth process.
  ],
  "permission": {
    "*": "ask",
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "codesearch": "allow"
  },
  "provider": {
    "ollama": {
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-vl:30b": {
          "name": "qwen3-vl:30b",
        },
        "HammerAI/mistral-nemo-uncensored:latest": {
          "name": "mistral-nemo-uncensored"
        },
        "HammerAI/hermes-3-llama-3.1:latest": {
          "name": "hermes-3-llama-3.1"
        },
        "HammerAI/smart-lemon-cookie:latest": {
          "name": "smart-lemon-cookie"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "environment": {
        "CONTEXT7_API_KEY": "${env:CONTEXT7_API_KEY}"
      }
    },
    "markitdown": {
      "enabled": true,
      "type": "local",
      "command": ["uvx", "--python", "3.10", "markitdown-mcp"]
    },
    "markdown_rag": {
      "enabled": true,
      "type": "local",
      "command": ["uv", "--directory", "/home/kiogreo/Desktop/note/journal/.opencode/mcp/MCP-Markdown-RAG", "run", "server.py"]
    }
  }
}
